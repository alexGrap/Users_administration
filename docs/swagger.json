                ],
                "tags": [
                    "Segment"
                ],
                "summary": "Create a new segment",
                "parameters": [
                    {
                        "description": "Body of creation segment",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.SegmentBody"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "OK"
                    },
                    "503": {
